<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="1dp"
    app:cardBackgroundColor="@color/grey"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/relSub"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/starLinearR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".18"
            android:clickable="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/timeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:textSize="18dp"
                android:layout_toLeftOf="@+id/llread"
                android:text="07:45"
                android:singleLine="false"
                android:gravity="center"
                android:textColor="@color/logout_user" />
            <TextView
                android:id="@+id/timeAPTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/llread"
                android:gravity="center"
                android:textSize="16dp"
                android:visibility="gone"
                android:text="AM"
                android:textColor="@color/logout_user" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llread"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".82"
            android:gravity="left"
            android:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subjectNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:text="message1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/subjectNameTxt"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tutorNameTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/readMessage"
                    android:layout_marginRight="5dp"
                    android:layout_weight="75"
                    android:layout_toLeftOf="@+id/subjectTxt"
                    android:text="test1"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/subjectTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/tutorNameTxt"
                    android:layout_gravity="center"
                    android:background="@drawable/curved_subject_background"
                    android:singleLine="false"
                    android:gravity="center"
                    android:text="Tutor"
                    android:textColor="@color/white" />
            </LinearLayout>
            <TextView
                android:id="@+id/breakTxtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Break"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llreadbreak"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/breakTxt"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Break"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/starLinear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".18"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:textSize="18dp"
                android:layout_toLeftOf="@+id/llread"
                android:text="07:45"
                android:singleLine="false"
                android:gravity="center"
                android:textColor="@color/logout_user" />
            <TextView
                android:id="@+id/timeAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/llread"
                android:gravity="center"
                android:textSize="16dp"
                android:visibility="gone"
                android:text="AM"
                android:textColor="@color/logout_user" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>