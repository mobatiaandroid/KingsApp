<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <com.example.kingsapp.manager.font.CustomTimesNewRoman
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:background="@color/kings_blue"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:gravity="center"
            android:text="NewsLetter"
            android:layout_height="70dp" />
        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/backarrow"
            android:visibility="visible"/>

    </RelativeLayout>
    <com.example.kingsapp.manager.font.CustomVerdanaBold
        android:id="@+id/webView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relativeHeader"
        android:textColor="@color/kings_blue"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:overScrollMode="never"
        android:scrollbars="none" />
    <com.example.kingsapp.manager.font.CustomVerdanaRegular
        android:id="@+id/webView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="5dp"
        android:layout_gravity="left|right"
        android:gravity="left|right"
        android:layout_below="@+id/webView1"
        android:justificationMode="inter_word"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true">

        <include
            android:id="@+id/progressDialog"
            layout="@layout/custom_progress_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </LinearLayout>-->

</RelativeLayout>