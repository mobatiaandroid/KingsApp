<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2dp"
    android:elevation="1dp"
    app:cardBackgroundColor="#BDBDBD"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/relSubMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/relSub"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/starLinearR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight=".15"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <com.kingseducation.app.manager.font.CustomMontserratMedium
                    android:id="@+id/periodTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/llread"
                    android:gravity="center"
                    android:text="TUT"
                    android:textColor="@color/logout_user"
                    android:textSize="16dp" />

                <com.kingseducation.app.manager.font.CustomMontserratMedium
                    android:id="@+id/timeTxt"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/llread"
                    android:gravity="center"
                    android:textColor="@color/logout_user"
                    android:textSize="16dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/llread"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".82"
                android:background="@color/greyy"
                android:gravity="left"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/tutorLinear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="100">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="20"

                        android:background="@color/btnBackground">


                        <com.kingseducation.app.manager.font.CustomMontserratMedium
                            android:id="@+id/tutor1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:maxLines="3"
                            android:textColor="@color/logout_user"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:id="@+id/countMRel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rotation="270"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_quarter_circle_teal">

                            <com.kingseducation.app.manager.font.CustomMontserratMedium
                                android:id="@+id/countMTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8dp"
                                android:padding="2dp"
                                android:visibility="gone"
                                android:textColor="@color/white"
                                android:layout_centerInParent="true"
                                android:rotation="90"
                                android:text="+1" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="20"

                        android:background="@color/btnBackground">

                        <com.kingseducation.app.manager.font.CustomMontserratMedium
                            android:id="@+id/tutor2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:maxLines="3"
                            android:text=""
                            android:textColor="@color/logout_user"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:id="@+id/countTRel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rotation="270"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_quarter_circle_teal">

                            <com.kingseducation.app.manager.font.CustomMontserratMedium
                                android:id="@+id/countTTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8dp"
                                android:padding="2dp"
                                android:visibility="gone"
                                android:textColor="@color/white"
                                android:layout_centerInParent="true"
                                android:rotation="90"
                                android:text="+1" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="20"

                        android:background="@color/btnBackground">

                        <com.kingseducation.app.manager.font.CustomMontserratMedium
                            android:id="@+id/tutor3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:maxLines="3"
                            android:text=""
                            android:textColor="@color/logout_user"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:id="@+id/countWRel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rotation="270"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_quarter_circle_teal">

                            <com.kingseducation.app.manager.font.CustomMontserratMedium
                                android:id="@+id/countWTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8dp"
                                android:padding="2dp"
                                android:visibility="gone"
                                android:textColor="@color/white"
                                android:layout_centerInParent="true"
                                android:rotation="90"
                                android:text="+1" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="20"

                        android:background="@color/btnBackground">

                        <com.kingseducation.app.manager.font.CustomMontserratMedium
                            android:id="@+id/tutor4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:maxLines="3"

                            android:text=""
                            android:textColor="@color/logout_user"

                            android:textSize="14dp" />

                        <RelativeLayout
                            android:id="@+id/countThRel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rotation="270"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_quarter_circle_teal">

                            <com.kingseducation.app.manager.font.CustomMontserratMedium
                                android:id="@+id/countThTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8dp"
                                android:padding="2dp"
                                android:visibility="gone"
                                android:textColor="@color/white"
                                android:layout_centerInParent="true"
                                android:rotation="90"
                                android:text="+1" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="20"

                        android:background="@color/btnBackground">

                        <com.kingseducation.app.manager.font.CustomMontserratMedium
                            android:id="@+id/tutor5"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:maxLines="3"
                            android:text=""

                            android:textColor="@color/logout_user"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:id="@+id/countFRel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rotation="270"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_quarter_circle_teal">

                            <com.kingseducation.app.manager.font.CustomMontserratMedium
                                android:id="@+id/countFTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8dp"
                                android:textColor="@color/white"
                                android:padding="2dp"
                                android:visibility="gone"
                                android:layout_centerInParent="true"
                                android:rotation="90"
                                android:text="+1" />

                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.kingseducation.app.manager.font.CustomMontserratMedium
                android:id="@+id/timeBreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/llread"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <com.kingseducation.app.manager.font.CustomMontserratMedium
                android:id="@+id/txtBreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/llread"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


