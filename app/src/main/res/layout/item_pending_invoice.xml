<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="128dp">

    <com.kingseducation.app.manager.font.CustomMontserratMedium
        android:id="@+id/invoiceTitleTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Invoice Title"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/invoiceTitle2TV"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kingseducation.app.manager.font.CustomMontserratMedium
        android:id="@+id/invoiceTitle2TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Invoice Description"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/amountTV"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="@+id/invoiceTitleTV"
        app:layout_constraintTop_toBottomOf="@+id/invoiceTitleTV" />

    <com.kingseducation.app.manager.font.CustomMontserratMedium
        android:id="@+id/amountTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Invoice Description"
        android:textColor="@color/kings_blue"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/dueDateTV"
        app:layout_constraintStart_toStartOf="@+id/invoiceTitle2TV"
        app:layout_constraintTop_toBottomOf="@+id/invoiceTitle2TV" />

    <com.kingseducation.app.manager.font.CustomMontserratMedium
        android:id="@+id/dueDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Invoice Description"
        android:textColor="@color/kings_blue"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/amountTV"
        app:layout_constraintTop_toBottomOf="@+id/amountTV" />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.1"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_square_bg_blue"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.kingseducation.app.manager.font.CustomMontserratMedium
            android:id="@+id/paymentStatusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginStart="4dp"
            android:text="Paid"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_right" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>